<Window x:Class="RogovPract6Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RogovPract6Wpf"
        mc:Ignorable="d"
        Title="Регистрация нового пользователя" Height="650" Width="500">
    <DockPanel >
        <DockPanel LastChildFill="False" Background="SlateGray" DockPanel.Dock="Top">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Name="button" Padding="10px" Margin="0 10px 15px 10px" FontSize="16">Главная</Button>
                <Button Name="button2" Padding="10px" Margin="0 10px 15px 10px" FontSize="16">Профиль</Button>
                <Button Name="button3" Padding="10px" Margin="0 10px 15px 10px" FontSize="16">Настройки</Button>
                <Button Name="button4" Padding="10px" Margin="0 10px 0 10px" FontSize="16">Помощь</Button>
            </StackPanel>
        </DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
        <WrapPanel HorizontalAlignment="Stretch" Background="#DCDCDC" Height="100px" DockPanel.Dock="Top"> 
            <Label Content="* Пароль должен содержать минимум 8 символов."></Label>
            <Label Content="* Email должен быть в формате name@mail.com."></Label>
            <Label Content="* Все поля обязательны."></Label>
        </WrapPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Right" >
            <Button Name="button5" Padding="10px" Margin="0 10px 15px 10px">Главная</Button>
            <Button Name="button6" Padding="10px" Margin="0 10px 15px 10px">Профиль</Button>
        </StackPanel>
        <DockPanel LastChildFill="False" Height="30px" DockPanel.Dock="Bottom">
            <Label Content="Готово"></Label>
        </DockPanel>
        
    </DockPanel>
</Window>
